@page "/countries"

<h3>Paises</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">Nuevo Pais</a>
</div>

<GenericList MyList="Countries">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pais</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>
                            @country.Name
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/countries/edit/@country.Id">Editar</a>
                            <a class="btn btn-info" href="/countries/details/@country.Id">Estados</a>
                            <button class="btn btn-danger" @onclick="@(() => Borrar(country.Id))">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>

<Pagination
    CurrentPage="CurrentPage"
    SelectedPage="SelectedPage"
    TotalPages="TotalPages"
/>